<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Listing Users<div class="pull-right"> 
      <%= link_to 'Create Users', new_user_path %>
    </h1>
  </div>
</div>
<div> 

<table class="table" border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Group</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if user.status == 0 %>
        <td><%= user.first_name%> <%=user.last_name %></td>
        <td><%= user.email %></td>
        <td><a href="#">Assign</a></td>
        <!-- Should display a list of available groups , optimal solution is use of radio buttons-->
        <td><% if(user.sign_in_count == 0)%> Deactivated <% else %> Activated <% end %> </td>
        <td><a data-target="#myModal" data-toggle="modal" href="#">View </a>|<%= link_to 'delete',user, method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade" style="display: none;">
   <div class="modal-dialog">
    <div class="modal-content">
     <div class="modal-header">
      <button aria-hidden="true" data-dismiss="modal" class="close" type="button">
       Ã—
      </button>
      <h4 id="myModalLabel" class="modal-title">Profile Information</h4>
     </div>
     <div class="modal-body custom-scroll terms-body">
      
     </div>
      <div class="modal-footer">
      <button data-dismiss="modal" class="btn btn-default" type="button">
       Cancel
      </button>
      <button id="i-agree" class="btn btn-primary" type="button">
       <i class="fa fa-check"></i> create
      </button>
     </div>
    </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
  </div>
</div>
</div>
