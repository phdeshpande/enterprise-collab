<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Users<div class="btn btn-primary pull-right"> <a data-target="#NewUser" data-toggle="modal" href="#"%>Create User</a></h3>
  </div>
  </div>
  <table class="table" border="1">
   <tr>
   	 <th> Name </th>
   	 <th> Email </th>
     <th> Group</th>
     <th> Status </th>
     <th> </th>
   </tr>
   <% @users.each do |user| %>
     <tr>
     	<td><%=user.first_name + user.last_name%></td>
     	<td><%=user.email%> </td>
      <td> <a data-target="#myGroup" data-toggle="modal" href="#"> Assign </a> </td>
      <td> </td>

      
     <td> <a data-target="#myModal" data-toggle="modal" href="#"> View </a>| 
    <%= link_to 'delete', administration_manage_users_path%></td>
     </tr>
<% end %>

  </table>
  <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade" style="display: none;">
   <div class="modal-dialog">
    <div class="modal-content">
     <div class="modal-header">
      <button aria-hidden="true" data-dismiss="modal" class="close" type="button">
       ×
      </button>
      <h4 id="myModalLabel" class="modal-title"><%=current_user.first_name%> info</h4>
     </div>
     <div class="modal-body custom-scroll terms-body">
      <p> Name : <%=current_user.first_name%></p>
      <p> Email : <%=current_user.email%></p>
    </div>
    <div class="modal-footer">
      <button data-dismiss="modal" class="btn btn-default" type="button">
       Cancel
      </button>
      
      
     
     </div>
    </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
  </div>
  


  <div aria-hidden="true" aria-labelledby="NewUserLabel" role="dialog" tabindex="-1" id="NewUser" class="modal fade" style="display: none;">
   <div class="modal-dialog">
    <div class="modal-content">
     <div class="modal-header">
      <button aria-hidden="true" data-dismiss="modal" class="close" type="button">
       ×
      </button>
      <h4 id="myUserLabel" class="modal-title">New User</h4>
     </div>
     <div class="modal-body custom-scroll terms-body">
      <%= form_for @user, :as => :post, :url => administration_manage_users_path do |f| %>
      <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <br />
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <br />
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <br />
  <label class="select">
      <select name="group">
       <option disabled="" selected="" value="0">Group</option>
       <option value="1">Sales</option>
       <option value="2">QA</option>
       <option value="3">Development</option>
       <option value="4">Marketing</option>
       <option value="5">SEO</option>
       <option value="6">Designers</option>
       <option value="7">Trainers</option>
       <option value="8">HR</option>
       <option value="9">Finance</option>
     </select>
    </label>
    <br />
     <br />
  <div class="actions">
    <%= f.submit "Invite", :class=>"btn btn-success pull-right"%>
  </div>
<% end %>

    </div>
    <div class="modal-footer">
      <button data-dismiss="modal" class="btn btn-default" type="button">
       Cancel
      </button>
      
      
     
     </div>
    </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
  </div>
</div>


