<div class="panel panel-default">
  <div class="panel-heading"><h3>Users <%= link_to 'Create User',  new_administration_path %></h3>
  
  </div>
  <table class="table" border="1">
   <tr>
   	 <th> Name </th>
   	 <th> Email </th>
     <th> Group</th>
     <th> Status </th>
     <th> </th>
   </tr>
   <% @users.each do |user| %>
     <tr>
     	<td><%=user.first_name%> </td>
     	<td><%=user.email%> </td>
      <td> <%= link_to 'Assign', @user%> </td>
      <td> </td>

      
