<!DOCTYPE html>
<html lang="en-us">
<head>
  <title>EnterpriseCollab</title>
  <meta content="" name="description">
  <meta content="" name="author">
  <meta content="True" name="HandheldFriendly">
  <meta content="320" name="MobileOptimized">
  <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">
  <%= stylesheet_link_tag    "public", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body id="login" class="animated fadeInDown">
  <!-- Loading Indicator -->
  <div class="pace  pace-inactive"><div class="pace-progress" style="width: 100%;" data-progress-text="100%" data-progress="99">
    <div class="pace-progress-inner"></div>
  </div>
  <div class="pace-activity"></div></div>  
  <!-- ENDs Loading Indicator -->

  <!-- HEADER -->
  <header id="header">
   <%= render "common/header" %>
  </header> 

  <!-- ENDs HEADER -->
  <div id="main" role="main">
    <div id="content" class="container">
      <div class="row">
        <%= yield %>        
      </div> <!-- END Row -->
    </div>
  </div>



<%= javascript_include_tag "public", "data-turbolinks-track" => true %>

<script type="text/javascript">
      runAllForms();

      $(function() {
        // Validation
        $("#login-form").validate({
          // Rules for form validation
          rules : {
            email : {
              required : true,
              email : true
            },
            password : {
              required : true,
              minlength : 3,
              maxlength : 20
            }
          },

          // Messages for form validation
          messages : {
            email : {
              required : 'Please enter your email address',
              email : 'Please enter a VALID email address'
            },
            password : {
              required : 'Please enter your password'
            }
          },

          // Do not change code below
          errorPlacement : function(error, element) {
            error.insertAfter(element.parent());
          }
        });
      });
    </script>


</body>



</html>
