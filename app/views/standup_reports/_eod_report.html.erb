<table class="table table-striped table-hover">
  <tr>
    <th>Priority</th>
    <th>Task Name</th>
    <th>Space</th>
    <th>ETA</th>
  </tr>
  <% if standup.blank? %>
  <tr>
    <td colspan="4" class="center">You did not create StandUp Report for yesterday!<td>
  </tr>
  <% else %>
    <% standup.each do |r| %>
    <tr>
      <td align="center"><%= display_priority(r.priority) %></td>
      <td class=<%= task_done?(r.status) ? "strikeoff" : "bold" %>>
        <%= link_to r.task_name, standup_report_path(r), 'data-toggle'=>"modal", 'data-target'=>"#SModal" %>
      </td>
      <td><%= r.space_id %></td>
      <td><%= r.eta %></td>
    </tr>
    <% end %>
    
  <% end %>

</table>